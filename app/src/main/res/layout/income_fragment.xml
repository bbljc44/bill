<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/wages"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@drawable/wages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wages"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="25dp"
            android:text="工资" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/part_time"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@drawable/part_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/part_time"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="25dp"
            android:text="兼职" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/manage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@drawable/manage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/manage"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="25dp"
            android:text="理财" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/in_others"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@drawable/others" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/in_others"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="25dp"
            android:text="其他" />
    </RelativeLayout>
</GridLayout>